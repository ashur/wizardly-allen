---
permalink: /index.html
layout: layouts/base.njk
---
<div
	{# This is the element that will be available to screen readers #}
	class="[][ grid ][ Visible ]"
>
	<div class="[ center container stack-lg ][][]">
		<header class="[][][ PageHeader ]">
			<h1
				aria-label="The Invisible Link Company"
				class="[ center ][][]"
			>
				<span
					aria-hidden="true"
					class="[][ block-children ][]"
				>
					<span>The</span>
					<em>Invisible Link</em>
					<span>Company</span>
				</span>
			</h1>

			<button
				onclick="toggleLight( event )"
				class="[][][ PullChain ]"
			>
				<span class="[][ visually-hidden ][]">Pull light chain</span>
			</button>
		</header>

		<main class="[][][]">
			<article class="[ stack-xl ][ text-center ][]">
				<div class="[ stack-lg ][ transparent ][]">
					<p
						aria-label="A link blog with a twist"
						class="[][ block-children font-regular ][ SiteSubtitle ]"
					>
						<span>A</span>
						<em>link blog</em>
						<span>with a twist&hellip;</span>
					</p>

					{% include "svg/rss.svg" %}

					<p
						class="[][ block-children font-condensed font-size:2 ][]"
					>
						<span>It’s only available</span>
						<span>via RSS</span>
					</p>
				</div>

				<p
					class="[ stack-sm ][ block-children ][ SiteAuthor ]"
				>
					<span class="[][ transparent ][]">“A terrible idea”</span>
					<span class="[][][]">by</span>
					<em class="[][][]">Ashur Cabrera</em>
				</p>
			</article>
		</main>
	</div>
</div>

<div
	{# This is the duplicate element that is not available to screen readers #}
	aria-hidden="true"
	class="[][ grid ][ Invisible ]"
>
	<div class="[ center container ][ stack-lg ][]">
		<div class="[][][ PageHeader ]">
			<h1 class="[ center ][ block-children ][]">
				<span>The</span>
				<em>Invisible Link</em>
				<span>Company</span>
			</h1>
		</div>

		<div class="[][][]">
			<div class="[ stack-xl ][ text-center ][]">
				<div class="[ stack-lg ][][]">
					<p class="[][ block-children font-regular ][ SiteSubtitle ]">
						<span>A</span>
						<em>link blog</em>
						<span>with a twist&hellip;</span>
					</p>

					{% include "svg/rss.svg" %}

					<p class="[][ block-children font-condensed color-green font-size:2 ][ ]">
						<span>It’s only available</span>
						<span>via RSS</span>
					</p>
				</div>

				<p class="[ stack-sm ][ block-children ][ SiteAuthor ]">
					<span class="[][ color-green ][]">“A terrible idea”</span>
					<span class="[][][]">by</span>
					<em class="[][][]">Ashur Cabrera</em>
				</p>
			</div>
		</div>
	</div>
</div>

<script>
	let elBody = document.querySelector( "body" );
	let elDocument = document.documentElement;
	let elChain = document.querySelector( ".PullChain" );

	let state = {
		x: 0,
		y: 0,
		light: true,
	};

	function followCursor( event )
	{
		if( state.light )
		{
			return;
		}

		moveTo( event.clientX, event.clientY );
	}

	function moveTo( x, y )
	{
		state.x = x;
		state.y = y;
		elDocument.style.setProperty( "--blacklight-x", `calc( ${state.x}px - var( --blacklight-size ) )` );
		elDocument.style.setProperty( "--blacklight-y", `calc( ${state.y}px - var( --blacklight-size ) )` );
	}

	function toggleLight( event )
	{
		state.light = !state.light;

		if( !state.light )
		{
			moveTo( event.clientX, event.clientY );
		}

		elChain.style.setProperty( "--chain-pull-length", "0.75rem" );
		setTimeout( () =>
		{
			elChain.style.setProperty( "--chain-pull-length", "0rem" );

			elBody.classList.toggle( "lights-on" );
			elBody.classList.toggle( "lights-off" );

		}, 150 )
	}
</script>
